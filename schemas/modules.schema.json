{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://workshopforge.dev/schemas/modules.schema.json",
  "title": "Workshop Modules",
  "description": "Learning modules with objectives and deliverables",
  "type": "object",
  "required": ["modules"],
  "properties": {
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "objective", "deliverables", "duration_minutes"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Unique module identifier (lowercase, alphanumeric, dashes)"
          },
          "title": {
            "type": "string",
            "minLength": 3,
            "maxLength": 80,
            "description": "Module title"
          },
          "objective": {
            "type": "string",
            "minLength": 10,
            "description": "Learning objective (what students will achieve)"
          },
          "deliverables": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "description": "Deliverable artifact (e.g., lab/01-setup.md, code sample)"
            },
            "description": "Expected outputs for this module"
          },
          "duration_minutes": {
            "type": "integer",
            "minimum": 1,
            "description": "Estimated time to complete this module"
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "IDs of prerequisite modules"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Topic tags for categorization"
          }
        }
      }
    }
  }
}
